<% content_for :title, @phonology_article.title %>

<div class="bg-white p-6 md:p-8 rounded-lg shadow-md space-y-6">
  <div class="mb-6">
    <%= render 'pub/shared/breadcrumbs', crumbs: [
      { title: "Languages", path: pub_languages_path },
      { title: @phonology_article.language.name, path: pub_language_path(@phonology_article.language) },
      { title: "Grammar & Phonology", path: pub_language_grammar_path(@phonology_article.language, tab: 'phonology') },
      { title: @phonology_article.title }
    ] %>
    <hr class="my-3">
  </div>

  <%= render 'pub/shared/content_header',
             back_path: pub_language_grammar_path(@phonology_article.language),
             back_path_text: 'Back to Grammar & Phonology',
             record: @phonology_article %>

  <header class="border-b pb-4">
    <h1 class="text-4xl font-bold text-gray-900"><%= @phonology_article.title %></h1>
    <p class="text-sm text-gray-500 mt-2">
      Grammar rule for <%= link_to @phonology_article.language.name, pub_language_path(@phonology_article.language), class: "text-blue-600 hover:underline" %>
    </p>
  </header>

  <div class="prose max-w-none" data-controller="wikilink-preview">
    <%= render_markdown(@phonology_article.body) %>
  </div>

  <div class="border-t pt-6">
    <%= render 'pub/shared/content_header',
               back_path: pub_language_grammar_path(@phonology_article.language),
               back_path_text: 'Back to Grammar & Phonology',
               record: @phonology_article %>
  </div>
</div>
