<% content_for :title, "Root: #{@root.text}" %>

<%= render 'pub/shared/search_block' %>

<div class="bg-white p-6 md:p-8 rounded-lg shadow-md">
  <div class="mb-6">
    <%= render 'pub/shared/breadcrumbs', crumbs: [
      { title: "Languages", path: pub_languages_path },
      { title: @language.name, path: pub_language_path(@language) },
      { title: "Word-building", path: pub_language_word_building_path(@language) },
      { title: @root.text }
    ] %>
  </div>

  <header class="border-b pb-4 mb-6">
    <h1 class="text-4xl font-bold font-mono text-gray-900">
      <%= @root.text %>
      <% if @root.transcription.present? %>
        <span class="ml-4 font-normal text-2xl text-gray-500">[<%= @root.transcription %>]</span>
      <% end %>
    </h1>
    <p class="mt-1 text-gray-600">A root in <%= @language.name %></p>
  </header>

  <div class="prose max-w-none mb-6" data-controller="wikilink-preview">
    <%= render_markdown(@root.meaning.presence || "No meaning provided.") %>
  </div>

  <%= render 'shared/etymology_spoiler', etymologizable: @root %>

  <div class="border-t pt-6 mt-8">
    <%= link_to "← Back to Word-building", pub_language_word_building_path(@language), class: "text-blue-600 hover:underline" %>
  </div>
</div>
