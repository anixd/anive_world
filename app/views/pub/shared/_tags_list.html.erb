<% return unless local_assigns[:record]&.tags&.any? %>

<div class="flex flex-wrap items-center gap-2">
  <% record.tags.order(:name).each do |tag| %>
    <%= link_to pub_tag_path(tag.name), class: "block" do %>
      <span class="px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 hover:bg-blue-200 hover:text-blue-900 transition-colors">
        #<%= tag.name %>
      </span>
    <% end %>
  <% end %>
</div>
