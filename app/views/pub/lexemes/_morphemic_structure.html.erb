<% if lexeme.morphemes.any? %>
  <div class="mb-4 pb-4 border-b">
    <div class="flex flex-wrap items-center gap-x-2 gap-y-2">
      <span class="text-lg font-semibold text-gray-700 mr-2">Morphemic Structure:</span>
      <% lexeme.morphemes.each do |morpheme| %>
        <% morphemable = morpheme.morphemable %>
        <% pill_class = morphemable.is_a?(Root) ? 'bg-blue-100 text-black' : 'bg-green-100 text-black' %>

        <%= link_to morphemable.text, [:pub, morphemable.language, morphemable],
                    class: "inline-block px-3 py-1 rounded-full text-sm font-medium #{pill_class} hover:ring-2 ring-offset-1",
                    title: morphemable.class.name %>
      <% end %>
    </div>
  </div>
<% end %>
