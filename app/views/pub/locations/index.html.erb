<% content_for :title, "Locations" %>

<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="border-b pb-4 mb-6">
    <h1 class="text-3xl font-bold">Locations</h1>
  </div>

  <% if @locations.any? %>
    <div class="flex flex-col gap-3">
      <% @locations.each do |location| %>
        <%= link_to pub_location_path(location), class: "block p-4 bg-white shadow rounded-lg border hover:border-blue-400 group" do %>
          <h2 class="text-xl font-semibold text-blue-700 group-hover:underline">
            <%= location.title %>
          </h2>
        <% end %>
      <% end %>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="mt-8"><%== pagy_nav(@pagy) %></div>
    <% end %>
  <% else %>
    <p class="text-gray-500 italic">There are no published locations yet.</p>
  <% end %>
</div>
