<% content_for :title, "Articles" %>

<%= render 'pub/shared/search_block' %>

<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="mb-6">
    <%= render 'pub/shared/breadcrumbs', crumbs: [
      { title: "Lore" },
      { title: "Articles" }
    ] %>
  </div>

  <div class="border-b pb-4 mb-6">
    <h1 class="text-3xl font-bold">Articles</h1>
  </div>

  <% if @articles.any? %>
    <div class="flex flex-col gap-3">
      <%= render partial: 'pub/shared/list_item', collection: @articles, as: :record %>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="mt-8"><%== pagy_nav(@pagy) %></div>
    <% end %>
  <% else %>
    <p class="text-gray-500 italic">There are no published articles yet.</p>
  <% end %>
</div>
