<% content_for :title, "Articles" %>

<%= render 'pub/shared/search_block' %>

<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="border-b pb-4 mb-6">
    <h1 class="text-3xl font-bold">Articles</h1>
  </div>

  <% if @articles.any? %>
    <div class="flex flex-col gap-3">
      <% @articles.each do |article| %>
        <%= link_to pub_article_path(article), class: "block p-4 bg-white shadow rounded-lg border hover:border-blue-400 group" do %>
          <h2 class="text-2xl font-semibold text-blue-700 group-hover:underline">
            <%= article.title %>
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            Published on <%= article.published_at.strftime("%B %d, %Y") %>
          </p>
        <% end %>
      <% end %>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="mt-8"><%== pagy_nav(@pagy) %></div>
    <% end %>
  <% else %>
    <p class="text-gray-500 italic">There are no published articles yet.</p>
  <% end %>
</div>
