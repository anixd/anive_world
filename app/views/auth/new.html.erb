<%# provide :page_title, "Log In" %>
<%# currently_at "Log In" %>
<section class="section-offset">
  <%= form_with url: auth_path do |form| %>
    <div class="w-full md:w-1/3 px-3 mb-6 mt-4 md:mb-0">
      <%= form.label :username, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field :username, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-2 px-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-500" %>
    </div>

    <div class="w-full md:w-1/3 px-3 mb-6 mt-4 md:mb-0">
      <%= form.label :password, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.password_field :password, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-2 px-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-500" %>
    </div>

    <div class="w-full px-3 mb-6 mt-5 md:mb-0">
      <%= form.label :remember_me, "Remember me", class: "form-label mt-2 text-red-700 font-bold" %>
      <%= form.check_box :remember_me, class: "mr-2 leading-tight" %>
    </div>

    <div class="w-full md:w-1/2 px-3 mb-6 mt-4 md:mb-0">
      <%= form.submit "Log In", class: "bg-green-600 hover:bg-green-800 text-gray-200 font-bold py-2 px-4 mb-4 rounded" %>
    </div>
  <% end %>
</section>