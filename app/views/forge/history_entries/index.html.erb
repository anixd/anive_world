<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Historical Events</h1>
    <% if policy(HistoryEntry).new? %>
      <%= link_to 'New Entry', new_forge_history_entry_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <div class="flex flex-col gap-3">
    <% @history_entries.each do |entry| %>
      <div class="bg-white shadow rounded-lg p-4">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="font-semibold text-lg">
              <%= link_to entry.title, forge_history_entry_path(entry), class: "text-blue-600 hover:underline" %>
            </h2>
            <p class="text-sm text-gray-500 mt-1">
              <%= entry.display_date.presence || "Date not set" %>
            </p>
          </div>
          <div class="flex-shrink-0 ml-4 flex items-center gap-4 text-sm">
            <% if policy(entry).edit? %>
              <%= link_to 'Edit', edit_forge_history_entry_path(entry), class: 'text-xs inline-block px-3 py-1 border bg-blue-100 border-blue-600 hover:bg-blue-300 rounded' %>
            <% end %>
            <% if policy(entry).destroy? %>
              <%= link_to 'Delete', forge_history_entry_path(entry), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-xs inline-block px-3 py-1 border bg-red-100 border-red-600 hover:bg-red-300 rounded' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-4">
    <%= render "shared/pagination_controls", pagy: @pagy %>
  </div>
</div>
