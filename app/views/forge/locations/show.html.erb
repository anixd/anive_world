<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @location.title %></h1>
    <div class="flex items-center gap-2">
      <% if policy(@location).edit? %>
        <%= link_to 'Edit', edit_forge_location_path(@location), class: 'text-xs font-bold inline-block border bg-blue-400 border-blue-600 hover:bg-blue-300 rounded py-2 px-4' %>
        <span class="mx-1 text-gray-600">|</span>
      <% end %>
      <%= link_to 'Back to List', forge_locations_path, class: 'text-xs font-bold inline-block border bg-gray-200 border-gray-400 hover:bg-gray-300 rounded py-2 px-4' %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <% if @character.tags.any? %>
      <div class="mb-6 pb-6 border-b border-gray-200 flex flex-wrap items-center gap-2">
        <h3 class="text-sm font-medium text-gray-500 mr-2">Tags:</h3>
        <% @character.tags.order(:name).each do |tag| %>
      <span class="px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
        #<%= tag.name %>
      </span>
        <% end %>
      </div>
    <% end %>

    <div class="mb-6 pb-6 border-b">
      <h3 class="text-lg font-semibold mb-2">Details</h3>
      <dl>
        <dt class="font-medium text-gray-500">Parent Location</dt>
        <dd class="text-gray-900">
          <% if @location.parent_location %>
            <%= link_to @location.parent_location.title, forge_location_path(@location.parent_location), class: "text-blue-600 hover:underline" %>
          <% else %>
            â€”
          <% end %>
        </dd>
      </dl>
    </div>

    <div class="prose max-w-none mb-6" data-controller="wikilink-preview">
      <%= render_markdown(@location.body) %>
    </div>

    <% if @location.child_locations.any? %>
      <div class="mt-6 pt-6 border-t">
        <h3 class="text-lg font-semibold mb-2">Locations inside this one</h3>
        <ul class="list-disc list-inside text-blue-600">
          <% @location.child_locations.order(:title).each do |child| %>
            <li><%= link_to child.title, forge_location_path(child), class: "hover:underline" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
