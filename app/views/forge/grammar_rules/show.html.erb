<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold"><%= @grammar_rule.title %></h1>
      <p class="font-mono text-lg text-gray-500"><%= @grammar_rule.rule_code %></p>
    </div>
    <div>
      <% if policy(@grammar_rule).edit? %>
        <%= link_to 'Edit', edit_forge_grammar_rule_path(@grammar_rule), class: 'bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded' %>
      <% end %>
      <%= link_to 'Back to List', forge_grammar_rules_path, class: 'ml-2 text-blue-600' %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="mb-6 pb-6 border-b">
      <h3 class="text-lg font-semibold mb-2">Language</h3>
      <%= link_to @grammar_rule.language.name, forge_language_path(@grammar_rule.language), class: "text-blue-600 hover:underline" %>
    </div>
    <div class="prose max-w-none">
      <%= render_markdown(@grammar_rule.body) %>
    </div>
  </div>
</div>
