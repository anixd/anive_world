<%= form_with(model: [:forge, calendar], class: "space-y-6") do |form| %>
  <% if calendar.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(calendar.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul class="list-disc list-inside">
        <% calendar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :name, "Calendar Name", class: "block font-bold mb-1" %>
      <%= form.text_field :name, class: "border rounded w-full p-2" %>
    </div>
    <div>
      <%= form.label :epoch_name, "Epoch Name", class: "block font-bold mb-1" %>
      <%= form.text_field :epoch_name, class: "border rounded w-full p-2", placeholder: "e.g. From the Founding" %>
    </div>
  </div>

  <div>
    <%= form.label :absolute_year_of_epoch, "Absolute Year of Epoch Start", class: "block font-bold mb-1" %>
    <%= form.number_field :absolute_year_of_epoch, class: "border rounded w-full p-2" %>
    <p class="text-xs text-gray-600 mt-1">The year on the absolute timeline when this calendar's Year 1 begins.</p>
  </div>

  <div>
    <%= form.label :description, "Description", class: "block font-bold mb-1" %>
    <%= form.text_area :description, rows: 4, class: "border rounded w-full p-2 font-mono" %>
  </div>

  <div class="actions">
    <%= form.submit "Save Calendar", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", forge_timeline_calendars_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %>
