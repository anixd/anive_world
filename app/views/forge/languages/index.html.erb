<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Языки</h1>
    <%= link_to 'Новый язык', new_forge_language_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Название</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Системный код</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Родительский язык</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @languages.each do |language| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to language.name, forge_language_path(language), class: "text-blue-600 font-semibold hover:underline" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap font-mono text-sm text-gray-500">
            <%= language.code %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            <%= language.parent_language&.name || "---" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to 'Просмотр', forge_language_path(language), class: 'text-gray-600 hover:text-gray-900 mr-3' %>
            <%= link_to 'Править', edit_forge_language_path(language), class: 'text-indigo-600 hover:text-indigo-900 mr-3' %>
            <%= link_to 'Архивировать', forge_language_path(language), data: { turbo_method: :delete, turbo_confirm: 'Вы уверены?' }, class: 'text-red-600 hover:text-red-900' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
