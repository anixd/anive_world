<div class="p-6">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h1 class="text-2xl font-bold">Phonology Articles</h1>
      <% if @current_language %>
        <h2 class="text-xl text-gray-500 font-normal">Language: <%= @current_language.name %></h2>
      <% end %>
    </div>
    <%= link_to 'New Article', new_forge_phonology_article_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded flex-shrink-0' %>
  </div>

  <div class="flex items-center gap-4 mb-6 border-b pb-3">
    <span class="text-sm font-medium text-gray-600">Filter by language:</span>
    <% @languages.each do |language| %>
      <% active_class = (language == @current_language) ? "bg-blue-100 text-blue-800 font-semibold" : "bg-gray-100 text-gray-700 hover:bg-gray-200" %>
      <%= link_to language.name, forge_phonology_articles_path(lang: language.code), class: "px-3 py-1 rounded-full text-sm #{active_class}" %>
    <% end %>
  </div>

  <div class="flex flex-col gap-3">
    <% @phonology_articles.each do |article| %>
      <div class="bg-white shadow rounded-lg p-4 flex justify-between items-start gap-4">
        <%# Активная зона %>
        <%= link_to forge_phonology_article_path(article), class: "flex-grow group" do %>
          <h2 class="font-semibold text-lg text-blue-700 group-hover:text-blue-900 group-hover:underline">
            <%= article.title %>
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            by <%= article.author.displayname %>
          </p>
        <% end %>

        <%# Кнопки %>
        <div class="flex-shrink-0 text-sm flex items-center gap-2">
          <% if policy(article).edit? %>
            <%= link_to 'Edit', edit_forge_phonology_article_path(article), class: 'text-xs inline-block px-3 py-1 border bg-blue-100 border-blue-600 hover:bg-blue-300 rounded' %>
          <% end %>
          <% if policy(article).destroy? %>
            <span class="mx-1 text-gray-600">|</span>
            <%= link_to 'Delete', forge_phonology_article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-xs inline-block px-3 py-1 border bg-red-100 border-red-600 hover:bg-red-300 rounded' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-4">
    <%= render "shared/pagination_controls", pagy: @pagy %>
  </div>
</div>
