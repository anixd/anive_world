<%= form_with(model: [:forge, phonology_article], class: "space-y-6") do |form| %>
  <% if phonology_article.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(phonology_article.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul class="list-disc list-inside">
        <% phonology_article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="md:col-span-2">
      <%= form.label :title, "Title", class: "block font-bold mb-1" %>
      <%= form.text_field :title, class: "border rounded w-full p-2" %>
    </div>
    <div>
      <%= form.label :rule_code, "Article Code", class: "block font-bold mb-1" %>
      <%= form.text_field :rule_code, class: "border rounded w-full p-2", placeholder: "e.g. P-01" %>
    </div>
  </div>

  <div>
    <%= form.label :language_id, "Language", class: "block font-bold mb-1" %>
    <%= form.collection_select :language_id, @languages, :id, :name,
                               { prompt: "Select a language" },
                               { class: "border rounded w-full p-2" } %>
  </div>

  <div>
    <%= form.label :body, "Content (Markdown)", class: "block font-bold mb-1" %>
    <%= form.text_area :body, rows: 15, class: "border rounded w-full p-2 font-mono" %>
  </div>

  <div>
    <%= form.label :tags_string, "Tags", class: "block font-bold mb-1" %>
    <%= form.text_field :tags_string, class: "border rounded w-full p-2", placeholder: "art, magic, history" %>
    <p class="text-xs text-gray-600 mt-1">Enter tags separated by commas or spaces. New tags will be created automatically.</p>
  </div>

  <%= render 'shared/publication_fields', form: form %>

  <div class="actions">
    <%= form.submit "Save Phonology Article", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", forge_phonology_articles_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %>
