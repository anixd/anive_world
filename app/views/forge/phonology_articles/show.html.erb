<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold"><%= @phonology_article.title %></h1>
      <p class="font-mono text-lg text-gray-500"><%= @phonology_article.rule_code %></p>
    </div>
    <div class="flex items-center gap-2">
      <% if policy(@phonology_article).edit? %>
        <%= link_to 'Edit', edit_forge_phonology_article_path(@phonology_article), class: 'text-xs font-bold inline-block border bg-blue-400 border-blue-600 hover:bg-blue-300 rounded py-2 px-4' %>
        <span class="mx-1 text-gray-600">|</span>
      <% end %>
      <%= link_to 'Back to List', forge_phonology_articles_path, class: 'text-xs font-bold inline-block border bg-gray-200 border-gray-400 hover:bg-gray-300 rounded py-2 px-4' %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <% if @phonology_article.tags.any? %>
      <div class="mb-6 pb-6 border-b border-gray-200 flex flex-wrap items-center gap-2">
        <h3 class="text-sm font-medium text-gray-500 mr-2">Tags:</h3>
        <% @phonology_article.tags.order(:name).each do |tag| %>
      <span class="px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
        #<%= tag.name %>
      </span>
        <% end %>
      </div>
    <% end %>

    <div class="mb-6 pb-6 border-b">
      <h3 class="text-lg font-semibold mb-2">Language</h3>
      <%= link_to @phonology_article.language.name, forge_language_path(@phonology_article.language), class: "text-blue-600 hover:underline" %>
    </div>
    <div class="prose max-w-none" data-controller="wikilink-preview">
      <%= render_markdown(@phonology_article.body) %>
    </div>
  </div>
</div>
