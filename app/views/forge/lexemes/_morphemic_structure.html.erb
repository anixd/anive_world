<% if lexeme.morphemes.any? %>
  <div class="mb-6 pb-6 border-b">
    <div class="flex flex-wrap items-center gap-x-2 gap-y-2">
      <span class="text-lg font-semibold text-gray-700 mr-2">Morphemic Structure:</span>
      <% lexeme.morphemes.each do |morpheme| %>
        <% morphemable = morpheme.morphemable %>
        <% pill_class = morphemable.is_a?(Root) ? 'is-root' : 'is-affix' %>
        <%= link_to morphemable.text, [:forge, morphemable.language, morphemable],
                    class: "morpheme-pill non-interactive #{pill_class}",
                    title: morphemable.class.name %>
      <% end %>
    </div>
  </div>
<% end %>
