<%= form_with(model: [:forge, language, lexeme], data: { turbo: false }, class: "space-y-6") do |form| %>
  <% if lexeme.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(lexeme.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul class="list-disc list-inside">
        <% lexeme.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%
    initial_morphemes_data = @lexeme.morphemes.map do |m|
      { id: m.morphemable_id, type: m.morphemable_type, text: m.morphemable.text }
    end
  %>
  <div data-controller="dependent-select morpheme-constructor"
       data-dependent-select-url-template-value="<%= parts_of_speech_forge_language_lexemes_path(':lang_id') %>"
       data-morpheme-constructor-search-url-value="<%= forge_morphemes_search_path %>"
       data-morpheme-constructor-create-root-url-template-value="<%= forge_language_roots_path(':lang_id') %>"
       data-morpheme-constructor-initial-morphemes-value="<%= initial_morphemes_data.to_json %>">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :language_id, "Language", class: "block font-bold mb-1" %>
        <%= form.collection_select :language_id, @languages, :id, :name,
                                   { prompt: "Select language" },
                                   { class: "border rounded w-full p-2",
                                     data: {
                                       dependent_select_target: "source",
                                       morpheme_constructor_target: "languageSelect",
                                       action: "change->dependent-select#update"
                                     }
                                   } %>
      </div>
      <div>
        <%= form.label :spelling, "Spelling", class: "block font-bold mb-1" %>
        <%= form.text_field :spelling, class: "border rounded w-full p-2", data: { morpheme_constructor_target: "spellingInput" } %>
      </div>
    </div>

    <hr class="my-6 border-gray-300" />
    <div class="space-y-4 bg-gray-50 p-4 rounded-lg border"
         data-controller="toggle-visibility"
         data-toggle-visibility-trigger-value="inherited borrowed">

      <h3 class="font-semibold text-lg border-b pb-2 mb-4">Origin</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :origin_type, class: "block font-bold mb-1" %>
          <%= form.select :origin_type,
                          Lexeme.origin_types.keys.map { |k| [k.humanize, k] },
                          {},
                          { class: "border rounded w-full p-2",
                            data: { action: "change->toggle-visibility#toggle" } } %>
        </div>

        <div data-toggle-visibility-target="toggleable" class="hidden">
          <%= form.label :origin_language_id, "Origin Language", class: "block font-bold mb-1" %>
          <%= form.collection_select :origin_language_id,
                                     @languages, :id, :name,
                                     { include_blank: 'Select language' },
                                     { class: "border rounded w-full p-2" } %>
          <p class="text-xs text-gray-600 mt-1">Select an ancestor or a source language.</p>
        </div>
      </div>
    </div>

    <hr class="my-6 border-gray-300" />
    <h3 class="text-xl font-semibold mb-3">First meaning (Word)</h3>

    <%# nested form for first Word %>
    <%= form.fields_for :words, lexeme.words.first || lexeme.words.build do |word_form| %>
      <div class="space-y-4 bg-gray-50 p-4 rounded-lg">
        <div>
          <%= word_form.label :definition, "Meaning/Translation", class: "block font-bold mb-1" %>
          <%= word_form.text_area :definition, rows: 3, class: "border rounded w-full p-2" %>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= word_form.label :transcription, "Transcription", class: "block font-bold mb-1" %>
            <%= word_form.text_field :transcription, class: "border rounded w-full p-2" %>
          </div>

          <div>
            <%= word_form.label :part_of_speech_ids, "Parts of speech", class: "block font-bold mb-1" %>
            <div id="parts-of-speech-container" data-dependent-select-target="target">
              <%= render 'forge/lexemes/parts_of_speech_checkboxes', form: word_form, lexeme: lexeme %>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-4 pt-4 border-t">
        <h4 class="font-semibold text-gray-700 mb-2">Etymology (for first meaning)</h4>
        <%= word_form.fields_for :etymology do |etymology_form| %>
          <div>
            <%= etymology_form.label :explanation, "Explanation", class: "block font-bold mb-1 text-sm" %>
            <%= etymology_form.text_area :explanation, rows: 8, class: "border rounded w-full p-2" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <hr class="my-6 border-gray-300" />

    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Morphemic Structure</h3>
      <button type="button"
              data-action="click->morpheme-constructor#createRootFromSpelling"
              class="text-xs font-medium text-blue-600 hover:text-blue-800 border border-blue-500 rounded-full px-3 py-1 hover:bg-blue-50">
        Create Root from Spelling
      </button>

      <%= form.hidden_field :morphemes_list, data: { morpheme_constructor_target: "hiddenInput" }, id: nil %>
      <div class="relative">
        <%= label_tag :morpheme_search, "Search for Roots or Affixes (use '-' prefix for affixes)", class: "block font-bold mb-1" %>
        <input type="text" id="morpheme_search" data-morpheme-constructor-target="searchInput" data-action="input->morpheme-constructor#debouncedSearch" class="border rounded w-full p-2" placeholder="e.g., lar or -ion">
        <div data-morpheme-constructor-target="resultsContainer" class="absolute z-10 w-full bg-white border rounded mt-1 shadow-lg hidden"></div>
      </div>
      <div>
        <label class="block font-bold mb-1">Structure (drag to reorder)</label>
        <div data-morpheme-constructor-target="pillsContainer" class="min-h-[60px] bg-gray-50 border-2 border-dashed rounded-lg p-2 flex flex-wrap gap-2 items-center">
        </div>
      </div>
    </div>

    <hr class="my-6 border-gray-300" />

    <%
      initial_synonyms_data = (@synonyms || []).map do |syn|
        { id: syn.id,
          text: "#{syn.spelling} (#{syn.language.code})",
          slug: syn.slug,
          lang_code: syn.language.code,
          language_id: syn.language_id
        }
      end
    %>
    <div class="space-y-4"
         data-controller="synonym-editor"
         data-synonym-editor-search-url-value="<%= search_forge_language_lexemes_path(@language, format: :json) %>"
         data-synonym-editor-initial-synonyms-value="<%= initial_synonyms_data.to_json %>"
         data-synonym-editor-url-template-value="<%= forge_language_lexeme_path(':lang_id', ':slug') %>"
         data-except-id="<%= @lexeme.id %>">

      <h3 class="text-xl font-semibold">Synonyms</h3>

      <div class="relative">
        <%= label_tag :synonym_search, "Search for a lexeme to add", class: "block font-bold mb-1" %>
        <input type="text" id="synonym_search"
               data-synonym-editor-target="searchInput"
               data-action="input->synonym-editor#debouncedSearch"
               class="border rounded w-full p-2"
               placeholder="Start typing a spelling...">
        <div data-synonym-editor-target="resultsContainer"
             class="absolute z-10 w-full bg-white border rounded mt-1 shadow-lg hidden"></div>
      </div>

      <div>
        <label class="block font-bold mb-1">Current Synonyms</label>
        <div data-synonym-editor-target="pillsContainer"
             class="min-h-[60px] bg-gray-50 border-2 border-dashed rounded-lg p-2 flex flex-wrap gap-2 items-center">
        </div>
      </div>
    </div>
  </div>

  <hr class="my-6 border-gray-300" />

  <%= render 'shared/publication_fields', form: form %>

  <div class="actions mt-6 mb-6">
    <%= form.submit "Save", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", forge_lexemes_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %>
