<div class="p-6">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h1 class="text-2xl font-bold">Dictionary (lexemes)</h1>
      <%# Выводим название текущего языка в подзаголовке %>
      <% if @current_language %>
        <h2 class="text-xl text-gray-500 font-normal">Current language: <%= @current_language.name %></h2>
      <% end %>
    </div>
    <%= link_to 'New word', new_forge_lexeme_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded flex-shrink-0' %>
  </div>

  <%# Переключатель языков %>
  <div class="flex items-center gap-4 mb-6 border-b pb-3">
    <span class="text-sm font-medium text-gray-600">Languages:</span>
    <% @languages.each do |language| %>
      <%# Стиль для активной ссылки %>
      <% active_class = (language == @current_language) ? "bg-blue-100 text-blue-800 font-semibold" : "bg-gray-100 text-gray-700 hover:bg-gray-200" %>
      <%= link_to language.name, forge_lexemes_path(lang: language.code), class: "px-3 py-1 rounded-full text-sm #{active_class}" %>
    <% end %>
  </div>

  <div class="my-4">
    <%= render 'shared/pagination_controls', collection: @lexemes %>
  </div>

  <%# Контейнер для списка карточек %>
  <div class="flex flex-col gap-3">
    <% @lexemes.each do |lexeme| %>
      <% first_word = lexeme.words.first %>

      <%# Карточка лексемы с обновлённой структурой %>
      <div class="bg-white shadow rounded-lg p-4 flex flex-col md:flex-row justify-between items-start gap-4">

        <%# Основная информация (слева) %>
        <div class="flex-grow">
          <h2 class="font-semibold text-lg text-blue-700 hover:text-blue-900 mb-1">
            <%= link_to lexeme.spelling, forge_lexeme_path(lexeme) %>
            <% if first_word&.transcription.present? %>
              <span class="ml-2 font-normal text-gray-500 text-base">[<%= first_word.transcription %>]</span>
            <% end %>
          </h2>

          <div class="text-sm text-gray-600 mt-2">
            <span><%= first_word&.parts_of_speech&.map(&:code)&.join(', ').presence || 'н/д' %></span>
          </div>

          <p class="text-gray-800 mt-2">
            <%= first_word&.definition.presence || content_tag(:span, "Нет определения", class: "italic text-gray-400") %>
          </p>
        </div>

        <%# Мета-информация и действия (справа) %>
        <div class="flex-shrink-0 w-full md:w-auto text-left md:text-right mt-2 md:mt-0">

          <%# ДОБАВЛЕННЫЙ БЛОК: Счётчик значений %>
          <div class="text-sm text-gray-500 italic mb-2">
            <%= pluralize(lexeme.words_count, 'meaning') %>
          </div>

          <div class="text-sm">
            <%= link_to 'Править', edit_forge_lexeme_path(lexeme), class: 'text-indigo-600 hover:text-indigo-900' %>
            <span class="mx-1 text-gray-300">|</span>
            <%= link_to 'Архивировать', forge_lexeme_path(lexeme), data: { turbo_method: :delete, turbo_confirm: 'Вы уверены?' }, class: 'text-red-600 hover:text-red-900' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= render 'shared/pagination_controls', collection: @lexemes %>
  </div>
</div>
