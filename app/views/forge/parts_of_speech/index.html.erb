<div class="p-6">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h1 class="text-2xl font-bold">Parts of Speech</h1>
      <% if @current_language %>
        <h2 class="text-xl text-gray-500 font-normal"><%= @current_language.name %></h2>
      <% end %>
    </div>
    <% if @current_language %>
      <%= link_to 'New Part of Speech', new_forge_language_part_of_speech_path(@current_language), class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded flex-shrink-0' %>
    <% end %>
  </div>

  <%# Переключатель языков %>
  <div class="flex items-center gap-4 mb-6 border-b pb-3">
    <span class="text-sm font-medium text-gray-600">Languages:</span>
    <% @languages.each do |language| %>
      <% active_class = (language == @current_language) ? "bg-blue-100 text-blue-800 font-semibold" : "bg-gray-100 text-gray-700 hover:bg-gray-200" %>
      <%= link_to language.name, forge_language_parts_of_speech_path(language, lang: language.code), class: "px-3 py-1 rounded-full text-sm #{active_class}" %>
    <% end %>
  </div>

  <div class="flex flex-col gap-3">
    <% @parts_of_speech.each do |part_of_speech| %>
      <div class="bg-white shadow rounded-lg p-4">
        <div class="flex justify-between items-center">
          <%# Левая часть: Название и код %>
          <div>
            <h2 class="font-semibold text-lg"><%= part_of_speech.name %></h2>
            <p class="font-mono text-sm text-gray-500"><%= part_of_speech.code %></p>
          </div>

          <div class="flex-shrink-0 ml-4 text-sm flex items-center gap-2 px-2 border-l border-blue-100">
            <%= link_to 'Edit', edit_forge_language_part_of_speech_path(@current_language, part_of_speech), class: 'text-xs inline-block px-3 py-1 border bg-blue-100 border-blue-600 hover:bg-blue-300 rounded' %>
            <span class="mx-1 text-gray-600">|</span>
            <%= link_to 'Delete', forge_language_part_of_speech_path(@current_language, part_of_speech), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-xs inline-block px-3 py-1 border bg-red-100 border-red-600 hover:bg-red-300 rounded' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
