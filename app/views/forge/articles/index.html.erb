<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Articles</h1>
    <% if policy(Article).new? %>
      <%= link_to 'New Article', new_forge_article_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <div class="flex flex-col gap-3">
    <% @articles.each do |article| %>
      <div class="bg-white shadow rounded-lg p-4">
        <div class="flex justify-between items-center">
          <%# Левая часть: Название и автор %>
          <div>
            <h2 class="font-semibold text-lg">
              <%= link_to article.title, forge_article_path(article), class: "text-blue-600 hover:underline" %>
            </h2>
            <p class="text-sm text-gray-500 mt-1">
              by <%= article.author.displayname %>
            </p>
          </div>

          <%# Правая часть: Кнопки действий %>
          <div class="flex-shrink-0 ml-4 flex items-center gap-4 text-sm">
            <% if policy(article).edit? %>
              <%= link_to 'Edit', edit_forge_article_path(article), class: 'text-xs inline-block px-3 py-1 border bg-blue-100 border-blue-600 hover:bg-blue-300 rounded' %>
            <% end %>
            <% if policy(article).destroy? %>
              <span class="mx-1 text-gray-600">|</span>
              <%= link_to 'Delete', forge_article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-xs inline-block px-3 py-1 border bg-red-100 border-red-600 hover:bg-red-300 rounded' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-4">
    <%= render "shared/pagination_controls", pagy: @pagy %>
  </div>
</div>
