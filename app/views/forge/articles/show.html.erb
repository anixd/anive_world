<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @article.title %></h1>
    <div class="flex items-center gap-2">
      <% if policy(@article).edit? %>
        <%= link_to 'Edit', edit_forge_article_path(@article), class: 'text-xs font-bold inline-block border bg-blue-400 border-blue-600 hover:bg-blue-300 rounded py-2 px-4' %>
      <% end %>
      <%= link_to 'Back to List', forge_articles_path, class: 'text-xs font-bold inline-block border bg-gray-200 border-gray-400 hover:bg-gray-300 rounded py-2 px-4' %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <% if @article.tags.any? %>
      <div class="mb-6 pb-6 border-b border-gray-200 flex flex-wrap items-center gap-2">
        <h3 class="text-sm font-medium text-gray-500 mr-2">Tags:</h3>
        <% @article.tags.order(:name).each do |tag| %>
      <span class="px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
        #<%= tag.name %>
      </span>
        <% end %>
      </div>
    <% end %>

    <div class="prose max-w-none" data-controller="wikilink-preview">
      <%= render_markdown(@article.body) %>
    </div>
  </div>
</div>
