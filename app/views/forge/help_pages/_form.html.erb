<%= form_with(model: [:forge, help_page], class: "space-y-6") do |form| %>
  <% if help_page.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(help_page.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul class="list-disc list-inside">
        <% help_page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :title, "Title", class: "block font-bold mb-1" %>
      <%= form.text_field :title, class: "border rounded w-full p-2" %>
    </div>
    <div>
      <%= form.label :parent_location_id, "Parent Page", class: "block font-bold mb-1" %>
      <%= form.collection_select :parent_location_id, @parent_options, :id, :title,
                                 { include_blank: 'None (Top-Level Page)' },
                                 { class: "border rounded w-full p-2" } %>
    </div>
  </div>

  <div>
    <%= form.label :body, "Content (Markdown)", class: "block font-bold mb-1" %>
    <%= form.text_area :body, rows: 15, class: "border rounded w-full p-2 font-mono" %>
  </div>

  <%= render 'shared/publication_fields', form: form %>

  <div class="actions">
    <%= form.submit "Save Help Page", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", forge_help_pages_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %>
