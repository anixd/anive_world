<div data-controller="live-search"
     data-live-search-scope-value="<%= params[:scope] || 'lore' %>"
     data-live-search-search-url-value="<%= forge_search_path %>">

  <%# Search form with scope parameter %>
  <%= form_with(url: forge_search_path, method: :get, class: "relative", data: { live_search_target: "form" }) do |form| %>
    <%= form.hidden_field :scope, value: params[:scope] || 'lore', data: { live_search_target: "scopeInput" } %>

    <%# Tabs - equal width, styled like in screenshot %>
    <div class="flex rounded-t-lg overflow-hidden border border-b-0 border-gray-300">
      <button type="button"
              data-scope="lore"
              data-action="click->live-search#setScope"
              data-live-search-target="loreTab"
              class="flex-1 py-2 px-4 text-center font-medium transition-colors <%= (params[:scope] || 'lore') == 'lore' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
        Lore
      </button>

      <button type="button"
              data-scope="dictionary"
              data-action="click->live-search#setScope"
              data-live-search-target="dictionaryTab"
              class="flex-1 py-2 px-4 text-center font-medium transition-colors <%= params[:scope] == 'dictionary' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
        Dictionary
      </button>
    </div>

    <%# Search input field %>
    <div class="relative">
      <%= form.search_field :q,
                            value: params[:q],
                            class: "block w-full border border-gray-300 rounded-b-lg text-lg pr-10 focus:border-blue-500 focus:ring-blue-500 px-3 py-2",
                            placeholder: (params[:scope] == 'dictionary' ? "Search in Dictionary..." : "Search in Lore..."),
                            data: {
                              live_search_target: "input",
                              action: "input->live-search#search"
                            } %>

      <div class="absolute inset-y-0 right-0 flex items-center pr-3">
        <button type="submit" class="text-gray-400 hover:text-gray-600">
          <span class="sr-only">Search</span>
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>

  <%# Container for live search results (will be used later) %>
  <div data-live-search-target="resultsContainer" class="relative"></div>

  <div class="mt-2">
    <details class="group">
      <summary class="text-sm text-gray-500 cursor-pointer hover:text-gray-700 transition-colors">
        Search syntax help
      </summary>
      <div class="mt-2 p-3 bg-gray-50 rounded-md text-sm text-gray-700 space-y-2">
        <div><strong>Content types:</strong> ar: (Article), ch: (Character), hs: (History), lc: (Location), gr: (Grammar), ph: (Phonology)</div>
        <div><strong>Languages:</strong> an: (Anik'e), dr: (Drelen), ve: (Vel'tari), l: (any language)</div>
        <div><strong>Search modes:</strong> "exact phrase", ^starts with, -exclude</div>
        <div><strong>Tags:</strong> #tagname</div>
        <div class="text-xs text-gray-500 pt-1">Examples: <code>ar: #war king</code>, <code>an: ^lar</code>, <code>ch: Elara -dead</code></div>
      </div>
    </details>
  </div>
</div>
