<%= form_with(model: [:forge, @tag], class: "space-y-6") do |form| %>
  <% if @tag.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block font-bold mb-1" %>
    <%= form.text_field :name, class: "border rounded w-full p-2" %>
    <p class="text-xs text-gray-600 mt-1">Allowed characters: letters, numbers, dash, underscore, apostrophe. Will be saved in lowercase.</p>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit "Save Tag", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", forge_tags_path, class: "text-gray-600" %>
  </div>
<% end %>
