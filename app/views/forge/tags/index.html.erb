<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Manage Tags</h1>
    <%= link_to 'New Tag', new_forge_tag_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="hidden md:flex bg-gray-50 rounded-t-lg px-4 py-2 border-b border-gray-200 text-xs font-medium text-gray-500 uppercase tracking-wider">
    <div class="flex-1">Tag Name</div>
    <div class="w-1/4 text-left">Usage Count</div>
    <div class="w-1/4 text-right">Actions</div>
  </div>

  <div class="flex flex-col gap-3 md:gap-0">
    <% @tags.each do |tag| %>
      <div class="bg-white shadow md:shadow-none rounded-lg md:rounded-none p-4 md:px-4 md:py-3 flex flex-col md:flex-row justify-between items-start md:items-center border-b border-gray-200">

        <div class="flex-1 flex flex-col md:flex-row md:items-center">
          <span class="px-2 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
            #<%= tag.name %>
          </span>
          <div class="md:hidden mt-2 text-sm text-gray-500">
            Usage Count: <%= tag.taggings_count %>
          </div>
        </div>

        <div class="hidden md:block w-1/4 text-left text-sm text-gray-500">
          <%= tag.taggings_count %>
        </div>

        <div class="text-sm">
          <%= link_to 'Edit', edit_forge_tag_path(tag), class: 'text-xs inline-block px-3 py-1 border border-blue-600 bg-blue-100 hover:bg-blue-300 rounded' %>
          <span class="mx-1 text-gray-600">|</span>
          <%= link_to 'Delete', forge_tag_path(tag), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-xs inline-block px-3 py-1 border bg-red-100 hover:bg-red-300 rounded' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
