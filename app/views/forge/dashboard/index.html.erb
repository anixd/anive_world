<div class="p-6">
  <h1 class="text-3xl font-bold mb-4">"Forge" Control Panel</h1>
  <p class="text-gray-600 mb-8">Welcome :)</p>

  <h2 class="text-xl font-semibold mb-4 border-b pb-2">Main sections</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <%# Лингвистическое ядро %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Linguistic core</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "Languages", forge_languages_path, class: "hover:underline" %></li>
        <li><%= link_to "Lexemes (Dictionary)", forge_lexemes_path, class: "hover:underline" %></li>
        <li><%= link_to "Roots", "#", class: "text-gray-400 cursor-not-allowed" %></li>
        <li><%= link_to "Affixes", "#", class: "text-gray-400 cursor-not-allowed" %></li>
      </ul>
    </div>

    <%# Контентное ядро %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Encyclopedia (Lore)</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "Articles", "#", class: "text-gray-400 cursor-not-allowed" %></li>
        <li><%= link_to "Historical events", "#", class: "text-gray-400 cursor-not-allowed" %></li>
        <li><%= link_to "Characters", "#", class: "text-gray-400 cursor-not-allowed" %></li>
        <li><%= link_to "Locations", "#", class: "text-gray-400 cursor-not-allowed" %></li>
      </ul>
    </div>

    <%# Инструменты %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Tools</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "My notes", "#", class: "text-gray-400 cursor-not-allowed" %></li>
      </ul>
    </div>

  </div>
</div>
