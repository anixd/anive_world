<div class="p-6">
  <h1 class="text-3xl font-bold mb-4">"Forge" Control Panel</h1>
  <p class="text-gray-600 mb-8">Welcome :)</p>

  <h2 class="text-xl font-semibold mb-4 border-b pb-2">Main sections</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <%# Лингвистическое ядро %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Linguistic core</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "Languages", forge_languages_path, class: "hover:underline" %></li>
        <ul class="list-disc list-inside ml-4 mt-1 text-sm">
          <li><%= link_to "Parts of Speech", forge_language_parts_of_speech_path(@default_lang), class: "hover:underline" %></li>
          <li><%= link_to "Roots", forge_language_roots_path(@default_lang), class: "hover:underline" %></li>
          <li><%= link_to "Affixes", forge_language_affixes_path(@default_lang), class: "hover:underline" %></li>
          <li><%= link_to "Affix Categories", forge_language_affix_categories_path(@default_lang), class: "hover:underline" %></li>
        </ul>
        <li><%= link_to "Lexemes (Dictionary)", forge_lexemes_path, class: "hover:underline" %></li>
        <li><%= link_to "Phonology", forge_phonology_articles_path, class: "hover:underline" %></li>
        <li><%= link_to "Grammar rules", forge_grammar_rules_path, class: "hover:underline" %></li>
      </ul>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Chronology</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "Manage Calendars", forge_timeline_calendars_path, class: "hover:underline" %></li>
        <li><%= link_to "Manage Eras", forge_timeline_eras_path, class: "hover:underline" %></li>
      </ul>
    </div>

    <%# Контентное ядро %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Lore (Encyclopedia)</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "Articles", forge_articles_path, class: "hover:underline" %></li>
        <li><%= link_to "Historical events", forge_history_entries_path, class: "hover:underline" %></li>
        <li><%= link_to "Characters", forge_characters_path, class: "hover:underline" %></li>
        <li><%= link_to "Locations", forge_locations_path, class: "hover:underline" %></li>
      </ul>
    </div>

    <%# Инструменты %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="font-semibold text-lg mb-3">Tools</h3>
      <ul class="space-y-2 text-blue-600">
        <li><%= link_to "Help Pages", forge_help_pages_path, class: "hover:underline" %></li>
        <li><%= link_to "Export Data", forge_export_path, class: "hover:underline" %></li>
        <li><%= link_to "My notes", forge_notes_path, class: "hover:underline" %></li>
      </ul>
    </div>

  </div>
</div>
