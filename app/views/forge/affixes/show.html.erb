<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <div class="flex items-baseline gap-4">
        <h1 class="text-3xl font-bold font-mono">
          "<%= @affix.text %>"
          <% if @affix.transcription.present? %>
            <span class="ml-2 font-normal text-gray-500">[<%= @affix.transcription %>]</span>
          <% end %>
        </h1>
        <span class="px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
          <%= @affix.affix_type %>
        </span>
      </div>
      <p class="text-lg text-gray-500">Affix in <%= @affix.language.name.downcase %></p>
    </div>
    <div>
      <%= link_to 'Edit', edit_forge_language_affix_path(@affix.language, @affix), class: 'bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to List', forge_language_affixes_path(@affix.language), class: 'ml-2 text-blue-600' %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-semibold mb-2">Meaning</h3>
    <div class="prose max-w-none mb-6 pb-6 border-b" data-controller="wikilink-preview">
      <%= render_markdown(@affix.meaning.presence) || content_tag(:p, "No meaning provided.", class: "text-gray-500 italic") %>
    </div>

    <%= render 'shared/etymology_spoiler', etymologizable: @affix %>
  </div>
</div>
