<%= form_with(model: [:forge, character], class: "space-y-6") do |form| %>
  <% if character.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(character.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul class="list-disc list-inside">
        <% character.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :title, "Имя", class: "block font-bold mb-1" %>
      <%= form.text_field :title, class: "border rounded w-full p-2" %>
    </div>
    <div>
      <%= form.label :life_status, "Статус", class: "block font-bold mb-1" %>
      <%= form.text_field :life_status, class: "border rounded w-full p-2", placeholder: "F.e: alive, dead, unknown" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :birth_date, "Birth date", class: "block font-bold mb-1" %>
      <%= form.text_field :birth_date, class: "border rounded w-full p-2" %>
    </div>
    <div>
      <%= form.label :death_date, "Death date", class: "block font-bold mb-1" %>
      <%= form.text_field :death_date, class: "border rounded w-full p-2" %>
    </div>
  </div>

  <div>
    <%= form.label :body, "Description (Markdown)", class: "block font-bold mb-1" %>
    <%= form.text_area :body, rows: 15, class: "border rounded w-full p-2 font-mono" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" %>
    <%= link_to "Cancel", forge_characters_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %>
