<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Characters</h1>
    <% if policy(Character).new? %>
      <%= link_to 'Create character', new_forge_character_path, class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <div class="flex flex-col gap-3">
    <% @characters.each do |character| %>
      <div class="bg-white shadow rounded-lg p-4">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="font-semibold text-lg">
              <%= link_to character.name, forge_character_path(character), class: "text-blue-600 hover:underline" %>
            </h2>
            <p class="text-sm text-gray-500 mt-1">
              <%= character.life_status.presence || "Status not specified" %>
            </p>
          </div>
          <div class="flex-shrink-0 ml-4 flex items-center gap-4 text-sm">
            <% if policy(character).edit? %>
              <%= link_to 'Edit', edit_forge_character_path(character), class: 'text-indigo-600 hover:text-indigo-900' %>
            <% end %>
            <% if policy(character).destroy? %>
              <%= link_to 'Delete', forge_character_path(character), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-4">
    <%= render "shared/pagination_controls", pagy: @pagy %>
  </div>
</div>
