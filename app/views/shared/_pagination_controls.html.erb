<% return if pagy.count == 0 %>

<div class="flex items-center justify-between">
  <div class="flex-shrink-0 text-sm">
    <%= form_with url: url_for(only_path: true), method: :get, data: { controller: "autosubmit" } do |form| %>
      <div class="flex items-center gap-2">
        <label for="items" class="text-gray-600">Show per page:</label>
        <%# МЕНЯЕМ :per_page НА :items %>
        <%= form.select :limit,
                        options_for_select([25, 50, 100, 200, 500], pagy.limit), {},
                        { "data-action": "change->autosubmit#submit",
                          class: "h-9 rounded-lg border-gray-600 shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
    <% end %>
  </div>

  <div class="flex-grow flex justify-center">
    <% if pagy.pages >= 1 %>
      <%== pagy_tailwind_nav(pagy) %>
    <% end %>
  </div>
</div>